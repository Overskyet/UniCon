<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/units_conversion_toolbar_elevation</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
    </style>

    <style name="AppToolbarImageView">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CreditsHeader">
        <item name="android:elevation">@dimen/units_conversion_toolbar_elevation</item>
        <item name="android:padding">@dimen/home_screen_credits_dialog_header_padding</item>
        <item name="android:paddingStart">@dimen/home_screen_credits_dialog_body_padding</item>
        <item name="android:text">@string/credits_header</item>
        <item name="android:textSize">@dimen/home_screen_credits_dialog_header_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CreditsBody">
        <item name="android:padding">@dimen/home_screen_credits_dialog_body_padding</item>
        <item name="android:text">@string/credits_body</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">@dimen/home_screen_credits_dialog_body_text_size</item>
    </style>

    <style name="HomeScreenButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/home_screen_buttons_height</item>
        <item name="android:textColor">@color/home_screen_fragments_buttons_text_color</item>
        <item name="android:textSize">@dimen/home_screen_buttons_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/home_screen_button_padding_10dp</item>
        <item name="android:paddingStart">@dimen/home_screen_button_padding_10dp</item>
        <item name="android:paddingEnd">@dimen/home_screen_button_padding_10dp</item>
    </style>

    <style name="HomeScreenButton.Red">
        <item name="android:background">@drawable/home_screen_red_button_background</item>
    </style>

    <style name="HomeScreenButton.Blue">
        <item name="android:background">@drawable/home_screen_blue_button_background</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:padding">@dimen/spinner_item_padding</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/spinner_item_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="ConversionTextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/units_conversion_text_size</item>
    </style>

    <style name="ConversionTextView.SpinnerInfo">
        <item name="android:layout_marginStart">@dimen/units_conversion_text_view_marginStart</item>
        <item name="android:layout_marginTop">@dimen/units_conversion_text_view_marginTop</item>
    </style>

    <style name="ConversionTextView.LastUpdateTime">
        <item name="android:gravity">center</item>
    </style>

    <style name="ConversionTextView.LastUpdateTime.Info">
        <item name="android:layout_marginTop">@dimen/last_update_time_info_marginTop</item>
    </style>

    <style name="ConversionTextView.LastUpdateTime.Date">
        <item name="android:layout_marginTop">@dimen/last_update_time_date_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/last_update_time_date_marginBottom</item>
    </style>

    <style name="ScrollView">
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="KeyboardButton">
        <item name="android:layout_margin">@dimen/units_conversion_buttons_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/units_conversion_buttons_text_size</item>
    </style>

    <style name="KeyboardButton.Digit">
        <item name="android:background">@drawable/units_conversion_screen_digit_button_background</item>
    </style>

    <style name="KeyboardButton.Func">
        <item name="android:background">@drawable/units_conversion_screen_func_button_background</item>
    </style>

    <style name="SpinnerContainer">
        <item name="android:layout_margin">@dimen/units_conversion_spinner_margin</item>
        <item name="android:backgroundTint">@color/text_color</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">@color/units_conversion_screen_spinner_popup_background_color</item>
    </style>

    <style name="EditText">
        <item name="android:layout_marginBottom">@dimen/units_conversion_edit_text_marginBottom</item>
        <item name="android:enabled">false</item>
        <item name="android:inputType">none</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/units_conversion_text_size</item>
    </style>

    <style name="EditText.InputField">
        <item name="android:backgroundTint">@color/hint_color</item>
    </style>

    <style name="EditText.OutputField">
        <item name="android:layout_marginEnd">@dimen/units_conversion_edit_text_marginEnd</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:hint">@string/output_hint</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

</resources>
