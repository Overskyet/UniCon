<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_screen_credits_header"
            style="@style/home_screen_dialog_header" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/units_conversion_toolbar_elevation"
            android:background="@drawable/units_conversion_screen_toolbar_bottom_shadow" />

        <TextView
            android:id="@+id/home_screen_credits_dialog_body"
            style="@style/home_screen_dialog_body" />

        <Button
            android:id="@+id/home_screen_ok_dialog_button"
            style="@style/home_screen_dialog_ok_button" />

    </LinearLayout>
</ScrollView>