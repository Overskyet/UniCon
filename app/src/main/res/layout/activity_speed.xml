<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conversion_activity_background_color"
    tools:context=".SpeedActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/from_string"
        android:textColor="@color/text_color"
        android:textSize="@dimen/textViewSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:text="@string/to_string"
        android:textColor="@color/text_color"
        android:textSize="@dimen/textViewSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:dropDownWidth="match_parent"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/input_converter"
        style="@style/focus_tint_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:focusable="false"
        android:inputType="none"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/textViewSize"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/output_converter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/output_converter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/output_hint"
        android:inputType="none"
        android:singleLine="true"
        android:textAlignment="viewEnd"
        android:textSize="@dimen/textViewSize"
        android:textColor="@color/text_color"
        android:textColorHint="@color/hint_color"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="411dp"
        android:layout_height="1dp"
        android:layout_marginBottom="4dp"
        android:background="?android:attr/listDivider"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_clear"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_func_button_background"
            android:onClick="onClickFuncBtn"
            android:text="@string/button_clear"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="518dp" />

        <Button
            android:id="@+id/button_sign"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_func_button_background"
            android:onClick="onClickFuncBtn"
            android:text="@string/button_plus_minus"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="518dp" />

        <Button
            android:id="@+id/button_delete"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_func_button_background"
            android:onClick="onClickFuncBtn"
            android:text="@string/button_delete"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="209dp"
            tools:layout_editor_absoluteY="518dp" />

        <Button
            android:id="@+id/button_reverse"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_func_button_background"
            android:onClick="onClickFuncBtn"
            android:text="@string/button_reverse"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="268dp"
            tools:layout_editor_absoluteY="518dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_7"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_7"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="424dp" />

        <Button
            android:id="@+id/button_8"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_8"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="443dp" />

        <Button
            android:id="@+id/button_9"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_9"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="235dp"
            tools:layout_editor_absoluteY="443dp" />

        <Button
            android:id="@+id/button_copy"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_func_button_background"
            android:onClick="onClickFuncBtn"
            android:text="@string/button_copy"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="306dp"
            tools:layout_editor_absoluteY="432dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_4"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_4"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="83dp"
            tools:layout_editor_absoluteY="512dp" />

        <Button
            android:id="@+id/button_5"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_5"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="171dp"
            tools:layout_editor_absoluteY="512dp" />

        <Button
            android:id="@+id/button_6"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_6"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="504dp" />

        <Button
            android:id="@+id/button_dot"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickFuncBtn"
            android:text="@string/button_dot"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="491dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button_1"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_1"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="630dp" />

        <Button
            android:id="@+id/button_2"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_2"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="630dp" />

        <Button
            android:id="@+id/button_3"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_3"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="242dp"
            tools:layout_editor_absoluteY="630dp" />

        <Button
            android:id="@+id/button_0"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/button_margin"
            android:layout_weight="1"
            android:background="@drawable/conversion_activity_digit_button_background"
            android:onClick="onClickDigitsBtn"
            android:text="@string/button_0"
            android:textColor="@color/text_color"
            android:textSize="@dimen/textSize"
            tools:layout_editor_absoluteX="347dp"
            tools:layout_editor_absoluteY="641dp" />

    </LinearLayout>

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.01" />

</android.support.constraint.ConstraintLayout>